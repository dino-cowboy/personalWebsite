<%- include('header.ejs') %>
<%- include('cover-page.ejs') %>

<section class="contactPage py-5">
  <div class="container contactMe">
    <div class="p-4 text-center contactContainer rounded-3 shadow-sm bg-light">
      <h1 class="text-body-emphasis mb-4">Contact Me</h1>
      <form action="/send-email" method="POST">
        
        <!-- Name -->
        <div class="mb-3 text-start">
          <label for="Name" class="form-label">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" class="bi bi-person me-1" viewBox="0 0 16 16">
              <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
            </svg>
            Name
          </label>
          <input name="name" type="text" id="Name" class="form-control" placeholder="Your Name" required>
        </div>

        <!-- Email -->
        <div class="mb-3 text-start">
          <label for="email" class="form-label">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" class="bi bi-envelope me-1" viewBox="0 0 16 16">
              <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
            </svg>
            Email
          </label>
          <input type="email" name="email" id="email" class="form-control" placeholder="Your Email" required>
        </div>

        <!-- Message -->
        <div class="mb-4 text-start">
          <label for="message" class="form-label">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" class="bi bi-chat-fill me-1" viewBox="0 0 16 16">
              <path d="M8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6-.097 1.016-.417 2.13-.771 2.966-.079.186.074.394.273.362 2.256-.37 3.597-.938 4.18-1.234A9 9 0 0 0 8 15"/>
            </svg>
            Message
          </label>
          <textarea class="form-control" name="message" id="message" rows="5" placeholder="Hi Juan! I'd love to discuss future opportunities with you." required></textarea>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button class="btn btn-dark btn-lg px-4 rounded-pill" type="submit">
            Send Message
          </button>
        </div>

      </form>
    </div>
  </div>
</section>

<script>
  const projectsButton = document.querySelector('.projects');
  const aboutButton = document.querySelector('.about');
  const contactButton = document.querySelector('.contact');
  if (projectsButton && aboutButton && contactButton) {
    aboutButton.classList.remove('active');
    projectsButton.classList.remove('active');
    contactButton.classList.add('active');
  }
  const contactSection = document.querySelector('.contactPage'); 
  if (contactSection) {
    contactSection.scrollIntoView({
      behavior: "smooth",
      block: "start"
    });
  }
</script>

